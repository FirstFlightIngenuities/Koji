<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kojigame.koji" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="InAppBillingPlugin">
        <param name="android-package" value="com.smartmobilesoftware.inappbilling.InAppBillingPlugin" />
    </feature>
    <name>Koji</name>
    <description>
        A fun word puzzle and color matching game different than any game you have played.
    </description>
    <author email="watid2005@aim.com" href="">
        First Flight Ingenuities
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <icon src="/res/icon/android/icon.png" />
    <preference name="loglevel" value="DEBUG" />
</widget>
